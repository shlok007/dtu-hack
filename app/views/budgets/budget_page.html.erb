
<div class="container">
<h1 style="font-family:MV Boli;">Travel Companion</h1>
<p>Tell me about your next journey</p>
<%= form_for Budget.new do |f| %>
   <div class="field">
    <%= f.label :from_date, "From Date" %><br>
    <%= f.date_field :from_date %>
  </div>
  <div class="field">
    <%= f.label :to_date , "Upto" %><br>
    <%= f.date_field :to_date %>
  </div><div class="field">
    <%= f.label :from, "Enter Origin" %><br>
    <%= f.text_field :from %>
  </div><div class="field">
    <%= f.label :to, "Enter Destination" %><br>
    <%= f.text_field :to %>
  </div><div class="field">
    <%= f.label :budgetprice, "Enter your budget amount" %><br>
    <%= f.text_field :budgetprice %>
  </div>
  <div class="actions">
    <%= f.submit "Submit",class: "btn waves-effect waves-light" %>
  </div>
<% end %>
</div>